  int i = 0;
    int j = 0;
    int maxi = 0;

    while(i<=j && j<n){
        mp[str[j]]++;
        if(mp.size()<=k){             
            maxi = max(j-i+1,maxi);
            
                  
        }
        
        while(mp.size()>k && i<=j){
                mp[str[i]]--;
                if(mp[str[i]] == 0){
                    mp.erase(str[i]);
                }
                i++;
            }

     j++;
        
    }
   if(mp.size()<=k) return maxi;
